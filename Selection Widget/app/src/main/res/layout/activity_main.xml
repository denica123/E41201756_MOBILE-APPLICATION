<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulir Data Diri"
        android:textColor="@color/purple_500"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/white"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/textnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="5dp"
            android:text="Nama "
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="text"
            android:hint="Tuliskan Nama anda"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/textdom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:paddingLeft="5dp"
            android:text="Domisili/Daerah "
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <AutoCompleteTextView
            android:id="@+id/dataautocomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Cari Nama Daerah"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textjenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:paddingLeft="5dp"
            android:text="Jenis Kelamin "
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:spinnerMode="dropdown"
            />

        <TextView
            android:id="@+id/textstudi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:paddingLeft="5dp"
            android:text="Studi Terakhir "
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/datalistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="pilihstudi"
            android:focusableInTouchMode="false"
            android:hint="Pilih Studi Terakhir"
            android:textSize="15dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="Simpan"
        />


</LinearLayout>